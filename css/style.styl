body_font = 'freight-sans-pro', 'Lucida Grande', sans-serif
heading_font = 'effra', 'Lucida Grande', sans-serif
text_color = #16161D
light_text_color = #38374b
accent_color = #FF3D3C //#FF4500
accent_color_rgb = rgba(255,80,2,1)
text_shadow_color = rgba(22,22,29,.05)

del
  position: relative
  &:after
    border-bottom: 7px solid text_color
    content: ''
    display: block
    position: absolute
    pointer-events: none
    top: .65em
    width: 100%

h1,
h2,
h3,
h4,
h5,
h6
  font-family: heading_font
  text-align: center
  margin: 2em auto

p, h1, h2, h3, h4, h5, h6, figure
  max-width: 38rem
  padding: 0 1em
  margin-left: auto
  margin-right: auto

a
  color: accent_color
  text-decoration: none
  // transition: color 0.1s ease-in-out
  // -webkit-transition: color 0.1s ease-in-out

  &:hover
    color: light_text_color

  p &
    display: inline
    color text_color
    border-bottom: 1px solid accent_color
    &:hover
      color: accent_color

img
  max-width: 100%

pre
  border-bottom: 3px solid rgba(0,0,0,.05)
  border-top: 3px solid rgba(0,0,0,.05)
  background-color: rgb(250,250,250)
  color: light_text_color
  line-height: 1.3
  max-width 100%
  padding: .5em 0 .5em
  overflow: scroll
  code
    background: none
    box-shadow: none
    display: block
    margin-left: auto
    margin-right: auto
    max-width: 38rem
    padding: 0 1em


code
  background: rgb(250,250,250)
  border-radius: 2px
  box-shadow: 0 0 0 1px rgba(0,0,0,.1) inset
  font-family: 'Monaco', monospace
  font-size: .7em
  padding: .2em .4em

body
  color: text_color
  font-size: 16px
  line-height: 1.5
  font-family: body_font
  margin: auto auto 2em
  // max-width: 33em
  // padding: 0 1em
  margin-bottom: 50px
  margin-bottom: 50vh

header
  text-align: center
  padding: 2.714em 0 1.857em // 38px 0 26px
  font-size: 1rem
  font-weight: bold
  margin-bottom: 4em
  text-rendering: optimizeLegibility
  font-family: heading_font
  text-transform: uppercase
  letter-spacing: 1px

  .logo
    width: 52px

footer
  color: #ddd
  font-size: 1rem
  font-family: heading_font
  text-align: center
  margin-top: 4.762em

.site-nav
  margin: 1.5em 0 0
  ul
    padding: 0
    margin: 0
  li
    color: light_text_color
    display: inline-block
    list-style: none
    &:after
      content: " â€¢ "
    &:last-child:after
      content: ""

  .is-current
    color: light_text_color


.post-title
  font-size: 1.7272em // 38px
  margin: 0 auto
.post-sep
  margin: 1em auto 1.25em
  width: 25%
  min-width: 50px
  border: 0
  border-bottom: 3px solid rgba(0,0,0,.1)


.image
  padding: 0
  margin: 1em auto
  list-style: none
  position: relative
  img
    display: block

.image-time
  font-family: heading_font
  font-size: 1rem
  font-weight: 600
  text-transform: uppercase
  color: accent_color
  position: absolute
  bottom: 10px
  right: 15px


.work
  display: inline-block
  font-family: heading_font
  font-size: 1.428em
  float: left
  margin: 0
  padding: 0
  max-width: 60%

  h3
    display: none

.is-gazette,
.is-bar-lawrence
  max-width: 40%

.cf:before,
.cf:after
  content: " "
  display: table

.cf:after
  clear: both


@media only screen and (min-width: 30em)
  body
    font-size: 18px

@media only screen and (min-width: 44em)
  body
    font-size: 20px
